<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.details.DetailsFragment">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="72dp"
        android:layout_height="44dp"
        android:src="?attr/actionModeCloseDrawable"
        tools:layout_editor_absoluteX="180dp"
        tools:layout_editor_absoluteY="160dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="304dp"
        tools:layout_editor_absoluteY="69dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textMovieNameRus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Человек-паук: Через вселенные"
                android:textSize="40sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textMovieNameEng"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Spider-man: into the Spider-Verse 2018"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textMovieNameRus" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="186dp"
                android:layout_height="258dp"
                android:src="@drawable/spiderman"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textMovieNameEng" />

            <TextView
                android:id="@+id/textShortDescription"
                android:layout_width="0dp"
                android:layout_height="226dp"
                android:text="TextView"
                app:layout_constraintBottom_toBottomOf="@+id/imageView2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageView2"
                app:layout_constraintTop_toBottomOf="@+id/textMovieNameEng" />

            <TextView
                android:id="@+id/textFullDescription"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="TextView "
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textShortDescription" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>

</LinearLayout>